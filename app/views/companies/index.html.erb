<h1>Listing companies</h1>

<table class="table table-striped">
	<thead>
  <tr>
    <th>Name</th>
    <th></th>
  </tr>
	</thead>

	<tbody>
<% @companies.each do |company| %>
  <tr>
    <td><%= company.name %></td>
    <td><%= link_to 'Show', company, class: 'btn btn-mini' %>
    <%= link_to 'Edit', edit_company_path(company), class: 'btn btn-mini' %>
    <%= link_to 'Destroy', company, confirm: 'Are you sure?', method: :delete, class: 'btn btn-mini btn-danger' %></td>
  </tr>
<% end %>
	</tbody>
</table>

<br />

<%= link_to 'New Company', new_company_path %>
